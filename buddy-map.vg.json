{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "file:///Users/white1/Dev/my-stuff/jira-reporter/buddy-map.csv"
  },
  "title": "Buddy heatmap",
  "mark": "rect",
  "encoding": {
    "y": {
      "field": "Owner",
      "type": "nominal"
    },
    "x": {
      "field": "Buddy",
      "type": "nominal"
    },
    "color": {
      "aggregate": "mean",
      "field": "Count",
      "scale": { "scheme": "tealblues", "reverse": true }
    }
  },
  "config": {
    "axis": {
      "grid": true,
      "tickBand": "extent"
    }
  }
}
